  <h1>タスクの一覧</h1>

  <table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= link_to '詳細', task_path(task) %></td>
  </tr>
  <% end %>
  </table>

  <p><%= link_to 'ToDoの作成', new_task_path %></p>