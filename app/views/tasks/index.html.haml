.container
  %h1.text-center.mb-5 タスクの一覧
  = search_form_for @search do |f|
    .text-right
      = f.label :title_cont, "ワード"
      = f.search_field :title_or_description_cont
      .actions.mb-3= f.submit "検索"
  .text-right.pb-5
    = link_to 'ToDoの作成', new_task_path, class: 'btn btn-primary btn-lg'
  %table.table.table-striped
    %thead
      %tr
        %th Id
        %th Title
        %th{:colspan => "3"} Description
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.id
          %td= task.title
          %td= task.description
          %td= link_to '詳細', task_path(task), class: 'btn btn-outline-link btn-xs'
          %td= link_to '編集', edit_task_path(task), class: 'btn btn-secondary btn-xs'
          %td= link_to '削除', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'



